@inject IStringLocalizer localize
@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width"/>
	<title>404</title>
	<link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
	<link rel="stylesheet" type="text/css" href="~/css/style.css"/>
	<link rel="stylesheet" type="text/css" href="~/css/colors/megna-dark.css"/>
</head>
<body class="fix-header card-no-border">
<!-- ============================================================== -->
<!-- Main wrapper -->
<!-- ============================================================== -->
<section id="wrapper" class="error-page">
	<div class="error-box">
		<div class="error-body text-center">
			<h1>404</h1>
			<h3 class="text-uppercase">@localize["page_not_found"]</h3>
			<p class="text-muted m-t-30 m-b-30">@localize["not_found_message"]</p>
			<a asp-controller="Home" asp-action="Index" class="btn btn-info btn-rounded waves-effect waves-light m-b-40">Back to home</a>
		</div>
		<footer class="footer text-center">2019 Â© ISO DMS.</footer>
	</div>
</section>
<!-- ============================================================== -->
<!-- End Wrapper -->
<!-- ============================================================== -->

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/tether/dist/js/tether.js"></script>
