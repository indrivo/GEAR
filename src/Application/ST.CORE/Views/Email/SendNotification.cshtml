@model ST.CORE.ViewModels.NotificationsViewModels.NotificationCreateViewModel
@inject IStringLocalizer Localizer
@{
	ViewData["Title"] = "Send Notification";
}


<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="col-xlg-10 col-lg-8 col-md-8">
				<form asp-action="SendNotification">
					<div class="card-block">
						<h3 class="card-title">Compose New Message</h3>
						<div class="form-group">
							<select multiple asp-for="Recipients" asp-items="@(new MultiSelectList((System.Collections.IEnumerable)ViewData["users"], "Id" , null))" class="form-control">
								<option value="">Select a recipients...</option>
							</select>
						</div>
						<div class="form-group">
							<input asp-for="Subject" class="form-control" placeholder="Subject:">
						</div>
						<div class="form-group">
							<textarea asp-for="Message" class="form-control" rows="15" placeholder="Enter message ..."></textarea>
						</div>
						<button type="submit" class="btn btn-success m-t-20"><i class="fa fa-envelope-o"></i> Send</button>
						<button class="btn btn-inverse m-t-20"><i class="fa fa-times"></i> @Localizer["reset"]</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


@section Scripts
{
	<script>
		$("#Recipients").select2({
			placeholder: "Select recipients"
		});
	</script>
}
