@model ST.Cms.ViewModels.FilesViewModels.DocumentCreateUpdateViewModel
@{
	ViewData["Title"] = "Edit";
}


<h2>Edit</h2>

<h4>Document</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			@Html.HiddenFor(x => x.Version)
			@Html.HiddenFor(x => x.Link)
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control"/>
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CodDocument" class="control-label"></label>
				<input asp-for="CodDocument" class="form-control"/>
				<span asp-validation-for="CodDocument" class="text-danger"></span>
			</div>
			<input type="hidden" asp-for="Id"/>
			<div class="form-group">
				<label asp-for="Status" class="control-label"></label>
				<input asp-for="Status" class="form-control"/>
				<span asp-validation-for="Status" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control"/>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ExternalLink" class="control-label"></label>
				<input asp-for="ExternalLink" class="form-control" />
				<span asp-validation-for="ExternalLink" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="TargetGroup" class="control-label"></label>
				<input asp-for="TargetGroup" class="form-control"/>
				<span asp-validation-for="TargetGroup" class="text-danger"></span>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<label asp-for="ResponsibleId" class="control-label"></label>
					<select asp-for="ResponsibleId" asp-items="@(new SelectList(Model.AvailableUsers, "Id", "UserName", null))" class="form-control"></select>
					<span asp-validation-for="ResponsibleId" class="text-danger"></span><br/>
				</div>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-success"/>
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>


