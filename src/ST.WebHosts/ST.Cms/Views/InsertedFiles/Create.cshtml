@model ST.Cms.ViewModels.FilesViewModels.DocumentCreateUpdateViewModel

@{
	ViewData["Title"] = "Create";
}


<h2>Create</h2>

<h4>Inserted File</h4>
<hr />
<div class="row">
	<div class="col-lg-12">
		<div class="card card-outline-info">
			<div class="card-header">
				<h4 class="m-b-0 text-white">Create Contact</h4>
			</div>
			<div class="card-body">
				<form method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="InsertedFiles">
					<div class="form-body">
						<h3 class="card-title">Contact Info</h3>
						<hr>
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group">
							<label asp-for="Title" class="control-label"></label>
							<input asp-for="Title" class="form-control" />
							<span asp-validation-for="Title" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="CodDocument" class="control-label"></label>
							<input asp-for="CodDocument" class="form-control" />
							<span asp-validation-for="CodDocument" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label asp-for="Description" class="control-label"></label>
							<input asp-for="Description" class="form-control" />
							<span asp-validation-for="Description" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="ExternalLink" class="control-label"></label>
							<input asp-for="ExternalLink" class="form-control" />
							<span asp-validation-for="ExternalLink" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="TargetGroup" class="control-label"></label>
							<input asp-for="TargetGroup" class="form-control" />
							<span asp-validation-for="TargetGroup" class="text-danger"></span>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label asp-for="ResponsibleId" class="control-label"></label>
								<select asp-for="ResponsibleId" asp-items="@(new SelectList(Model.AvailableUsers, "Id", "UserName", null))" class="form-control"></select>
								<span asp-validation-for="ResponsibleId" class="text-danger"></span><br />
							</div>
						</div>

						<div class="form-group">

							<p>Upload one files using this form:</p>
							<input type="file" name="FileBlob"/>

						</div>
					</div>
						<div class="form-group">
							<input type="submit" value="Create" class="btn btn-success" id="btnSubmit" />
						</div>

						<div id="loader" style="display: none" class="row justify-content-center">
							<img src="~/images/loader.svg" style="width: 70px; height: 70px" class="img-responsive m-3" alt="Loader" />
						</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {


	<script type="text/javascript" language="javascript">


		$("#btnSubmit").click(function () {
			$('#loader').show();
		});
	</script>
}


