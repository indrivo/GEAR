@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">
					Iso Files
				</h4>
				<div class="tab-content" id="tabContainer">
					<ul class="nav nav-tabs customtab" role="tablist">
						<li class="nav-item">
							<a class="nav-link" data-toggle="tab" role="tab" asp-controller="InsertedFiles" asp-action="_InsertedFiles">
								<span class="hidden-sm-up">
									<i class="ti-home"></i>
								</span>
								@*<span class="hidden-xs-down">Contact</span>*@
							</a>
						</li>
					</ul>
					<div id="loader" style="display: none" class="row justify-content-center">
						<img src="~/images/loader.svg" style="width: 70px; height: 70px" class="img-responsive m-3" alt="Loader" />
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts
    {
	<script type="text/javascript" language="javascript">
        let searchParams = new URLSearchParams(window.location.search);
        searchParams.has('tab');
        let param = searchParams.get('tab');
        $("#tabContainer").tabs({ active: param});
        jQuery(document).ready(function ($) {
            $("#tabContainer").tabs({
                beforeLoad: function (event, ui) {
                    $(ui.panel).siblings('.ui-tabs-panel').empty();
                    $('#loader').show();
                },
                load: function (e, ui) {
                    $('#loader').hide();
                    $(ui.panel).html();
                }
            });
        });
	</script>
}

