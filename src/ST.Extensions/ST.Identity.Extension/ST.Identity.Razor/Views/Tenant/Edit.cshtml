@model ST.Identity.Data.MultiTenants.Tenant
@inject IStringLocalizer Localizer
@{
	ViewData["Title"] = $"Edit {Model.Name} tenant";
}

<div class="card card-outline-primary">
	<div class="card-header">
		<h4 class="mb-0 text-white">Edit tenant @Model.Name</h4>
	</div>
	<div class="card-body">
		<form id="block_create" asp-action="Edit" role="form">
			@Html.HiddenFor(x => x.Changed)
			@Html.HiddenFor(x => x.Created)
			@Html.HiddenFor(x => x.Author)
			@Html.HiddenFor(x => x.Id)
			@Html.HiddenFor(x => x.IsDeleted)
			@Html.HiddenFor(x => x.ModifiedBy)
			@Html.HiddenFor(x => x.MachineName)
			<div class="form-body">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="row p-t-20">
					<div class="col-md-12">
						<div class="form-group">
							<label class="control-label" asp-for="Name"></label>
							<input class="form-control" type="text" asp-for="Name" />
							<span asp-validation-for="Name" class="text-danger"></span><br />
							<small>Name of the tenant</small>
						</div>
					</div>
					<div class="col-md-12">
						<div class="form-group">
							<label class="control-label" asp-for="SiteWeb"></label>
							<input class="form-control" type="text" asp-for="SiteWeb" />
							<span asp-validation-for="SiteWeb" class="text-danger"></span><br />
							<small></small>
						</div>
					</div>
					<div class="col-md-12">
						<div class="form-group">
							<label class="control-label" asp-for="Address"></label>
							<input class="form-control" type="text" asp-for="Address" />
							<span asp-validation-for="Address" class="text-danger"></span><br />
							<small></small>
						</div>
					</div>
				</div>
			</div>
			<div class="row button-group">
				<div class="col-lg-2 col-md-3">
					<button type="submit" class="btn btn-block btn-success"> <i class="fa fa-check"></i> @Localizer["save"]</button>
				</div>
				<div class="col-lg-2 col-md-3">
					<button type="reset" class="btn btn-block  btn-inverse"> @Localizer["reset"]</button>
				</div>
				<div class="col-lg-2 col-md-3">
					<a asp-action="Index" class="btn btn-block btn-link"> @Localizer["back"]</a>
				</div>
			</div>
		</form>
	</div>
</div>


@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


