<Project Sdk="Microsoft.NET.Sdk.Razor">



  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>7.3</LangVersion>
    <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="libman.json">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="2.2.0" />
    <PackageReference Include="Microsoft.Web.LibraryManager.Build" Version="2.0.48" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ST.TaskManager.Abstractions\ST.TaskManager.Abstractions.csproj" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="wwwroot\**\*" />
    <Content Update="**\*.cshtml" Pack="false" />
    <Content Include="wwwroot\**\*">
      <CopyToPublishDirectory>Always</CopyToPublishDirectory>
    </Content>
  </ItemGroup>



  <ItemGroup>
    <Compile Remove="ViewModels\**" />
    <Content Remove="ViewModels\**" />
    <EmbeddedResource Remove="ViewModels\**" />
    <None Remove="ViewModels\**" />
  </ItemGroup>



  <ItemGroup>
    <EmbeddedResource Remove="wwwroot\assets\TaskManagerPlugins\task-manager-templates.js" />
    <EmbeddedResource Remove="wwwroot\assets\TaskManagerPlugins\task-manager.css" />
  </ItemGroup>



  <ItemGroup>
    <None Remove="wwwroot\assets\TaskManagerPlugins\task-manager-templates.js" />
    <None Remove="wwwroot\assets\TaskManagerPlugins\task-manager.css" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="Views\_ViewImports.cshtml">
      <Pack>false</Pack>
    </Content>
    <Content Update="Views\_ViewStart.cshtml">
      <Pack>false</Pack>
    </Content>
  </ItemGroup>
</Project>