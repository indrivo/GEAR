	function editPermission(permissionId) {
		const url = $('#editPermission-modal').data('url');
		$.get(url,
			{ id: permissionId },
			function(data) {
				$('#editPermissionModal').html(data);
				$('#editPermission-modal').modal('show');
			});
	};
</script>