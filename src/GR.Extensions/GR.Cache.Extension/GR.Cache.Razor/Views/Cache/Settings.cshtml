@model GR.Cache.Abstractions.RedisConnectionConfig

@{
    ViewData["Title"] = "Distributed Cache credentials";
}

<div class="card card-outline-info">
    <div class="card-header">
        <h4 class="mb-0 text-white">Redis settings</h4>
    </div>
    <div class="card-body">
        <form asp-action="Settings" role="form">
            <div class="row p-t-20">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Host"></label>
                        <input asp-for="Host" class="form-control" />
                        <span asp-validation-for="Host" class="text-danger"></span><br />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Port"></label>
                        <input asp-for="Port" class="form-control" />
                        <span asp-validation-for="Port" class="text-danger"></span><br />
                    </div>
                </div>
            </div>
            <div class="row button-group">
                <div class="col-lg-2 col-md-3">
                    <button type="submit" class="btn btn-block btn-success"> <i class="fa fa-check"></i> @Localizer["save"]</button>
                </div>
                <div class="col-lg-2 col-md-3">
                    <button type="reset" class="btn btn-block  btn-inverse"> @Localizer["reset"]</button>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
