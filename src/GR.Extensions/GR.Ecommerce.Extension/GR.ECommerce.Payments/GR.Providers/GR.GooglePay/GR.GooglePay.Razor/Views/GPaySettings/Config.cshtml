@model GR.GooglePay.Abstractions.ViewModels.GPayEditSettingsViewModel
@{
    ViewData["Title"] = "Google Pay settings";
    var supportedAllowedCardNetworks = Model.SupportedAllowedCardNetworks.Select(x => new SelectListItem(x, x));
    var supportedAllowedCardAuthMethods = Model.SupportedAllowedCardAuthMethods.Select(x => new SelectListItem(x, x));
}

<div class="card mb-4">
    <div class="card-header text-capitalize">@ViewData["Title"]</div>
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (ViewData["isSuccess"] != null)
        {
            <div class="alert alert-success" role="alert">
                @Localizer["system_inline_saved"]
            </div>
        }
    <form asp-action="Config" asp-controller="GPaySettings" method="post" autocomplete="off">
        <div class="form-group row">
            <JTranslateLabel asp-for="MerchantId" class="col-sm-2 col-form-label text-capitalize"></JTranslateLabel>
            <div class="col-sm-10">
                <input asp-for="MerchantId" class="form-control">
                <span class="text-danger" asp-validation-for="MerchantId"></span>
            </div>
        </div>
        <div class="form-group row">
            <JTranslateLabel asp-for="MerchantName" class="col-sm-2 col-form-label text-capitalize"></JTranslateLabel>
            <div class="col-sm-10">
                <input asp-for="MerchantName" class="form-control">
                <span asp-validation-for="MerchantName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ApiVersion" class="col-sm-2 col-form-label text-capitalize"></label>
            <div class="col-sm-10">
                <input asp-for="ApiVersion" class="form-control">
                <span asp-validation-for="ApiVersion" class="text-danger"></span>
            </div>
        </div>
        <hr class="my-4 dashed">
        <div class="form-group row">
            <label asp-for="AllowedCardAuthMethods" class="col-sm-2 col-form-label text-capitalize">Allowed Card Auth Methods</label>
            <div class="col-sm-10">
                <select asp-for="AllowedCardAuthMethods" class="form-control" asp-items="supportedAllowedCardAuthMethods">
                </select>
                <span class="text-danger" asp-validation-for="AllowedCardAuthMethods"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="AllowedCardNetworks" class="col-sm-2 col-form-label text-capitalize">Allowed Card Networks</label>
            <div class="col-sm-10">
                <select asp-for="AllowedCardNetworks" class="form-control" asp-items="supportedAllowedCardNetworks">
                </select>
                <span class="text-danger" asp-validation-for="AllowedCardNetworks"></span>
            </div>
        </div>
        <div class="custom-control mb-4 custom-checkbox">
            <input type="checkbox" asp-for="IsSandbox" class="custom-control-input">
            <label class="custom-control-label" asp-for="IsSandbox"></label>
        </div>
        <div class="row button-group">
            <div class="col-lg-2 col-md-3">
                <button type="submit" class="btn btn-block btn-success"> @Localizer["save"]</button>
            </div>
            <div class="col-lg-2 col-md-3">
                <button type="reset" class="btn btn-block  btn-inverse"> @Localizer["reset"]</button>
            </div>
            <div class="col-lg-2 col-md-3">
                <a href="/PaymentMethods" class="btn btn-block btn-link"> @Localizer["back"]</a>
            </div>
        </div>
    </form>
    </div>
</div>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('#AllowedCardAuthMethods').select2();
            $('#AllowedCardNetworks').select2();
        });
    </script>
}