@model GR.Orders.Razor.ViewModels.OrderViewModels.OrderViewModel

@{
    ViewData["Title"] = Localizer["system_order_details"];
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <partial name="_OrderSummaryPartialView" model="@Model.Order" />
            </div>
			<div class="col-md-6">
				<h2>@Localizer["system_payments"]</h2>
				<table class="table">
					<thead>
						<tr>
							<th>@Localizer["system_payment_method"]</th>
							<th>@Localizer["system_payment_status"]</th>
							<th>@Localizer["system_transaction_id"]</th>
						</tr>
					</thead>
					<tbody>
						@if (!Model.Payments.Any())
						{
							<tr>
								<td colspan="3">
									@Localizer["system_commerce_no_payments"]
								</td>
							</tr>
						}

						@foreach (var payment in Model.Payments)
						{
							<tr>
								<td>@payment.PaymentMethodId</td>
								<td>@payment.PaymentStatus.ToString()</td>
								<td>@payment.GatewayTransactionId</td>
							</tr>
						}
					</tbody>
				</table>
				<div class="row">
					<div class="col-md-6">
						<h2 class="pl-2">@Localizer["system_billing_address"]</h2>
						@if (Model.BillingAddress != null)
						{
							<div class="col-md-12">
								<p>
									<span class="weight-400 font-weight-bold">@Localizer["user_contact_name"] : </span><span class="text-muted">@Model.BillingAddress.ContactName</span>
								</p>
								<p>
									<span class="weight-400 font-weight-bold">@Localizer["system_phone"] : </span><span class="text-muted">@Model.BillingAddress.Phone</span>
								</p>
								<p>
									<span class="weight-400 font-weight-bold">@Localizer["user_address_line_1"] : </span><span class="text-muted">@Model.BillingAddress.AddressLine1</span>
								</p>
								<p>
									<span class="weight-400 font-weight-bold">@Localizer["system_country"] : </span><span class="text-muted">@Model.BillingAddress.Country?.Name</span>
								</p>
								<p>
									<span class="weight-400 font-weight-bold">@Localizer["user_address_line_2"] : </span><span class="text-muted">@Model.BillingAddress.AddressLine2</span>
								</p>
								<p>
									<span class="weight-400 font-weight-bold">@Localizer["system_city"] : </span><span class="text-muted">@Model.BillingAddress.StateOrProvince?.Name</span>
								</p>
								<p>
									<span class="weight-400 font-weight-bold">@Localizer["user_zip_code"] : </span><span class="text-muted">@Model.BillingAddress.ZipCode</span>
								</p>
							</div>
						}
						else
						{
							<b>No billing address</b>
						}
					</div>
					<div class="col-md-6">
						<h2 class="pl-2">Shipping address</h2>
						@if (Model.ShippingAddress != null)
						{
							<div class="col-md-12">
								<p>
									<span class="weight-400 font-weight-bold">@Localizer["user_contact_name"] : </span><span class="text-muted">@Model.ShippingAddress.ContactName</span>
								</p>
								<p>
									<span class="weight-400 font-weight-bold">@Localizer["system_phone"] : </span><span class="text-muted">@Model.ShippingAddress.Phone</span>
								</p>
								<p>
									<span class="weight-400 font-weight-bold">@Localizer["user_address_line_1"] : </span><span class="text-muted">@Model.ShippingAddress.AddressLine1</span>
								</p>
								<p>
									<span class="weight-400 font-weight-bold">@Localizer["system_country"] : </span><span class="text-muted">@Model.ShippingAddress.Country?.Name</span>
								</p>
								<p>
									<span class="weight-400 font-weight-bold">@Localizer["user_address_line_2"] : </span><span class="text-muted">@Model.ShippingAddress.AddressLine2</span>
								</p>
								<p>
									<span class="weight-400 font-weight-bold">@Localizer["system_city"] : </span><span class="text-muted">@Model.ShippingAddress.StateOrProvince?.Name</span>
								</p>
								<p>
									<span class="weight-400 font-weight-bold">@Localizer["user_zip_code"] : </span><span class="text-muted">@Model.ShippingAddress.ZipCode</span>
								</p>
							</div>
						}
						else
						{
							<b>No shipment address</b>
						}
					</div>
				</div>
			</div>
        </div>
    </div>
</div>