                                                    {
                                                        <option label="@attribute.Text" value="@attribute.Value"></option>
                                                    }
                                           
                                        </select>
                                        <div class="input-group-append">
                                            <a id="addOptionBtn" href="#" class="btn btn-secondary">Add</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
