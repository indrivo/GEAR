@model GR.ECommerce.Abstractions.ViewModels.ProductViewModels.ProductViewModel

@{
    ViewData["Title"] = "Edit product";
}

@section Styles
{
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/css/dropify.min.css">
    <style>
        label {
            user-select: none;
        }

        .table tr th {
            padding: 12px !important;
        }
    </style>
}

<div class="card">
    <div class="card-body">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#generalInformation" role="tab">
                    <span class="hidden-sm-up"></span> <span class="hidden-xs-down">General Information</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#productAttributes" role="tab">
                    <span class="hidden-sm-up"></span> <span class="hidden-xs-down">Product Attributes</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#productVariations" role="tab">
                    <span class="hidden-sm-up"></span> <span class="hidden-xs-down">Product Variations</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#categoryMapping" role="tab">
                    <span class="hidden-sm-up"></span> <span class="hidden-xs-down">Category Mapping</span>
                </a>
            </li>


        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="generalInformation">
                @await Html.PartialAsync("Tabs/_GeneralInformation", Model)
            </div>
            <div class="tab-pane" id="productAttributes">
                @await Html.PartialAsync("Tabs/_ProductAttributes", Model)
            </div>
            <div class="tab-pane" id="categoryMapping">
                @await Html.PartialAsync("Tabs/_CategoryMapping", Model)
            </div>
            <div class="tab-pane" id="productVariations">
                @await Html.PartialAsync("Tabs/_ProductVariations", Model)
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/js/dropify.min.js"></script>
    <script type="text/javascript" language="javascript">
        $(".dropify").dropify();
    </script>
}