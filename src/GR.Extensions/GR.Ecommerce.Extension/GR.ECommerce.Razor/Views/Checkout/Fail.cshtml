@model GR.Orders.Abstractions.Models.Order

@{
    ViewData["Title"] = "Payment fail";
}

<div class="card" style="height: 100vh">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <p class="text-center">
                            <span class="fa fa-close" style="color: red; font-size: 15em;"></span>
                        </p>
                        <h1 class="text-center">Payment failed!</h1>
                        <div class="row">
                            <div class="col-md-6">
                                <b>Amount to pay:</b>
                            </div>
                            <div class="col-md-6">
                                $@Model?.Total.ToString("N2")
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md">
                                <a asp-action="MyOrders" asp-controller="Orders">My orders</a>
                                <a asp-action="Payment" asp-controller="Checkout" asp-route-orderId="@Model?.Id">Retry</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</div>	