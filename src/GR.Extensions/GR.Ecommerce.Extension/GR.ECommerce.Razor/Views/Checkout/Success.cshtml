@model GR.Orders.Abstractions.Models.Order

@{
    ViewData["Title"] = "Order was payed";
}

<div class="card" style="height: 100vh">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <p class="text-center">
                            <span class="fa fa-check-circle" style="color: green; font-size: 15em;"></span>
                        </p>
                        <h1 class="text-center">Payment Successful!</h1>
                        <div class="row">
                            <div class="col-md-6">
                                <b>Amount paid:</b>
                            </div>
                            <div class="col-md-6">
                                $@Model?.Total.ToString("N2")
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md">
                                <a asp-action="MyOrders" asp-controller="Orders">My orders</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</div>	