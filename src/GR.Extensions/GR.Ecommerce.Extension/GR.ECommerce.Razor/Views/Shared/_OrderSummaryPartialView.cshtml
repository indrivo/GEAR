@model GR.Orders.Abstractions.Models.Order

<div class="row">
    <div class="col">
        <h4 class="mb-4">@Localizer["system_commerce_order_summary"]</h4>
        <table class="table table-borderless">
            <thead>
            <tr>
                <th class="text-secondary font-weight-normal">@Localizer["system_product"]</th>
                <th class="text-secondary font-weight-normal">@Localizer["system_commerce_quantity"]</th>
                <th class="text-secondary font-weight-normal text-right">@Localizer["system_price"]</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var productOrder in Model.ProductOrders)
            {
                <tr>
                    <td class="fw-600">@productOrder.Product?.Name</td>
                    <td>@productOrder.Amount</td>
                    <td class="text-right">@Model.Currency?.Symbol@productOrder.AmountFinalPriceWithOutDiscount.ToString("N2")</td>
                </tr>
            }
            </tbody>
        </table>
        <hr />
        <div class="d-flex">
            <span class="text-secondary">@Localizer["sub_total"]:</span>
            <span class="fw-600 ml-auto">@Model.Currency?.Symbol@Model.SubTotal.ToString("N2")</span>
        </div>
        <div class="d-flex">
            <span class="text-secondary">@Localizer["system_commerce_discount"]:</span>
            <span class="fw-600 ml-auto">@Model.Currency?.Symbol@Model.DiscountTotal.ToString("N2")</span>
        </div>
        <hr />
        <div class="d-flex">
            <span class="text-secondary">@Localizer["system_commerce_order_total"]:</span>
            <span class="fw-600 ml-auto">@Model.Currency?.Symbol@Model.Total.ToString("N2")</span>
        </div>
    </div>
</div>