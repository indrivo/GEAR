@{
    var conf = new ListTagHelperModel
    {
        Title = Localizer["system_commerce_my_orders"],
        ListIdentifier = "my_orders",
        Api = new ListApiConfigurationViewModel
        {
            Url = Url.Action("GetMyOrdersWithPagination", "OrdersApi")
        },
        StyleAttributes = new List<InlineStyleAttribute>
{
            new InlineStyleAttribute("width", "100%")
        },
        RenderColumns = new List<ListRenderColumn>
{
            new ListRenderColumn("Id", "id"),
            new ListRenderColumn(Localizer["system_payment_status"], "state"),
            new ListRenderColumn(Localizer["system_commerce_order_total"], "formattedTotal"),
            new ListRenderColumn(Localizer["created"], "created"),
            new ListRenderColumn(Localizer["changed"], "changed")
        },
        HeadButtons = new List<UrlTagHelperViewModel>(),
        HasActions = true,
        ListActions = new List<ListActionViewModel>
{
            new ListActionViewModel
            {
                HasIcon = false,
                Name = Localizer["system_view_details"],
                Url = Url.Action("Details", "Orders"),
                ButtonType = BootstrapButton.Info,
                ActionParameters = new List<ActionParameter>
{
                    new ActionParameter("orderId", "id")
                }
            },
        },
        Documentation = "List of my orders"
    };
}

<JList asp-for="@conf"></JList>