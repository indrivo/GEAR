@{
	Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
	<meta name="viewport" content="width=device-width" />
	<title>404</title>
	<link rel="stylesheet" type="text/css" href="~/lib/twitter-bootstrap/css/bootstrap.min.css" />
	<link rel="stylesheet" type="text/css" href="~/themes/admin/css/style.css" />
	<link rel="stylesheet" type="text/css" href="~/themes/admin/css/colors/green.css" />
</head>
<body class="fix-header card-no-border">
	<section id="wrapper" class="error-page">
		<div class="error-box">
			<div class="error-body text-center">
				<h1>404</h1>
				<h3 class="text-uppercase">@Localizer["page_not_found"]</h3>
				<p class="text-muted m-t-30 m-b-30">@Localizer["not_found_message"]</p>
				<a asp-controller="Home" asp-action="Index" class="btn btn-info btn-rounded waves-effect waves-light m-b-40">@Localizer["system_back_to_home"]</a>
			</div>
			<footer class="footer text-center">@DateTime.Now.Year</footer>
		</div>
	</section>
</body>
</html>