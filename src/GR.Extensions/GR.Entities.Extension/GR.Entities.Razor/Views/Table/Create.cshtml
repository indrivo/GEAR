@model GR.Entities.Abstractions.ViewModels.Table.CreateTableViewModel
@{
    ViewData["Title"] = Localizer["add_table"];
}

<div class="card card-outline-info">
    <div class="card-header">
        <h4 class="mb-0 text-white">@Localizer["add_table"]</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" role="form">
            @Html.HiddenFor(x => x.SelectedTypeId) @*Remove if you use select of schemes*@
            <div class="form-body">
                <h3 class="card-title">Table info</h3>
                <hr>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row pt-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    @*<div class="col-md-6">
                            <div class="form-group" id="role_profile">
                                <label asp-for="SelectedTypeId" class="control-label"></label>
                                <select asp-for="SelectedTypeId" asp-items="@(new SelectList(Model.EntityTypes, "Id", "Name", null))" class="form-control">
                                    <option value="" selected="">--Select--</option>
                                </select>
                                <span asp-validation-for="SelectedTypeId" class="text-danger"></span>
                            </div>
                        </div>*@
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group checkbox checkbox-primary pull-left p-t-0 ml-3">
                                <div class="custom-control custom-checkbox">
                                    <input asp-for="IsCommon" class="custom-control-input vis-check" />
                                    <label class="custom-control-label" asp-for="IsCommon"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" rows="5" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row button-group">
                <div class="col-lg-2 col-md-3">
                    <button type="submit" class="btn btn-block btn-success">
                        <i class="fa fa-check"></i> @Localizer["save"]
                    </button>
                </div>
                <div class="col-lg-2 col-md-3">
                    <button type="reset" class="btn btn-block  btn-inverse"> @Localizer["reset"]</button>
                </div>
                <div class="col-lg-2 col-md-3">
                    <a asp-action="Index" class="btn btn-block btn-link"> @Localizer["back"]</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script language="javascript" type="text/javascript">
        $(document).ready(function () {
            $('#SelectedTypeId').select2({
                allowClear: false,
            });
        });
    </script>
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}