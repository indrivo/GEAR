@model GR.ECommerce.Razor.ViewModels.AddToCartViewModel


@{
	ViewData["Title"] = "Cart";
}

<div class="col-12 row">
	<div class="col-8">
		<table class="table">
			<tr>
				<th scope="col">Product</th>
				<th scope="col">Price</th>
				<th scope="col">Quantity</th>
				<th scope="col"></th>
			</tr>
            
			<tbody class="listProducts">
			@foreach (var cartItem in Model.CartItems)
			{
				<tr>
					<td>
						@cartItem.Product.Name
					</td>
					<td>
						@cartItem.Product.CurrentPrice
					</td>
					<td>
						@cartItem.Amount
					</td>
					<td>
						X
					</td>
				</tr>
			}
			</tbody>
		</table>

		<textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Enter order note"></textarea>
	</div>
	<div class="col-3 m-2 row border">
		<p>Order summary</p>
		<hr class="style1">

		<div class="6">TotalPrice</div>
		<div class="6"></div>

		<hr class="style1">
	</div>
</div>